# Database
DATABASE_URL=postgresql://boomcard_prod:${DB_PASSWORD}@postgres.boomcard.com:5432/boomcard_production?schema=public&sslmode=require
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_SSL=true

# Redis
REDIS_URL=redis://redis.boomcard.com:6379
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_TLS=true

# Authentication
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d
SESSION_SECRET=${SESSION_SECRET}

# API Configuration
API_URL=https://api.boomcard.com
API_VERSION=v1
API_RATE_LIMIT_WINDOW=15m
API_RATE_LIMIT_MAX=100

# Payment Processing
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY}
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET}
PAYMENT_CURRENCY=BGN
PAYMENT_WEBHOOK_URL=https://api.boomcard.com/webhooks/stripe

# Email Service
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=${SENDGRID_API_KEY}
EMAIL_FROM=noreply@boomcard.com
EMAIL_REPLY_TO=support@boomcard.com

# SMS Service
TWILIO_ACCOUNT_SID=${TWILIO_ACCOUNT_SID}
TWILIO_AUTH_TOKEN=${TWILIO_AUTH_TOKEN}
TWILIO_PHONE_NUMBER=${TWILIO_PHONE_NUMBER}

# Storage
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
AWS_REGION=eu-central-1
AWS_S3_BUCKET=boomcard-production
AWS_S3_ENDPOINT=https://s3.eu-central-1.amazonaws.com
CDN_URL=https://cdn.boomcard.com

# QR Code Generation
QR_CODE_BASE_URL=https://app.boomcard.com/scan
QR_CODE_ERROR_CORRECTION=M
QR_CODE_SIZE=300

# Maps & Geolocation
GOOGLE_MAPS_API_KEY=${GOOGLE_MAPS_API_KEY}
MAPBOX_ACCESS_TOKEN=${MAPBOX_ACCESS_TOKEN}
DEFAULT_LATITUDE=42.6977
DEFAULT_LONGITUDE=23.3219
DEFAULT_ZOOM=12

# Analytics
GOOGLE_ANALYTICS_ID=${GA_MEASUREMENT_ID}
MIXPANEL_TOKEN=${MIXPANEL_TOKEN}
SENTRY_DSN=${SENTRY_DSN}
SENTRY_ENVIRONMENT=production

# Security
CORS_ORIGIN=https://boomcard.com,https://www.boomcard.com,https://app.boomcard.com
ALLOWED_HOSTS=boomcard.com,www.boomcard.com,api.boomcard.com,app.boomcard.com
SECURE_HEADERS=true
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000

# POS Integration
POS_API_TIMEOUT=30000
POS_WEBHOOK_SECRET=${POS_WEBHOOK_SECRET}
POS_RETRY_ATTEMPTS=3
POS_RETRY_DELAY=1000

# Subscription Plans
SUBSCRIPTION_BASIC_PRICE=9.99
SUBSCRIPTION_PREMIUM_PRICE=19.99
SUBSCRIPTION_BUSINESS_PRICE=49.99
SUBSCRIPTION_CURRENCY=BGN
SUBSCRIPTION_TRIAL_DAYS=14

# Localization
DEFAULT_LOCALE=bg
SUPPORTED_LOCALES=bg,en
TIMEZONE=Europe/Sofia

# Mobile App
IOS_APP_ID=com.boomcard.app
ANDROID_APP_ID=com.boomcard.app
APP_STORE_URL=https://apps.apple.com/app/boomcard/id1234567890
PLAY_STORE_URL=https://play.google.com/store/apps/details?id=com.boomcard.app

# Push Notifications
FCM_SERVER_KEY=${FCM_SERVER_KEY}
APNS_KEY_ID=${APNS_KEY_ID}
APNS_TEAM_ID=${APNS_TEAM_ID}

# Admin Panel
ADMIN_EMAIL=admin@boomcard.com
ADMIN_URL=https://admin.boomcard.com

# Monitoring
NEW_RELIC_LICENSE_KEY=${NEW_RELIC_LICENSE_KEY}
NEW_RELIC_APP_NAME=boomcard-production

# Feature Flags
ENABLE_SOCIAL_LOGIN=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_SMS_VERIFICATION=true
ENABLE_REFERRAL_PROGRAM=true
ENABLE_LOYALTY_POINTS=true

# Cache
CACHE_TTL_DEFAULT=3600
CACHE_TTL_PARTNERS=7200
CACHE_TTL_CATEGORIES=86400

# Search
ELASTICSEARCH_URL=https://es.boomcard.com:9200
ELASTICSEARCH_USER=${ELASTICSEARCH_USER}
ELASTICSEARCH_PASSWORD=${ELASTICSEARCH_PASSWORD}

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Logging
LOG_LEVEL=error
LOG_FORMAT=json
LOG_DESTINATION=cloudwatch

# Environment
NODE_ENV=production
PORT=3000
