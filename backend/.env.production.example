# Production Environment Variables Example
# Copy this to .env.production and fill in your actual values

# Database (Supabase)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres

# Redis (Upstash)
REDIS_URL=redis://default:[PASSWORD]@[ENDPOINT].upstash.io:[PORT]

# JWT Secrets (generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=your-generated-jwt-secret-here
JWT_REFRESH_SECRET=your-generated-refresh-secret-here

# API Configuration
PORT=3001
NODE_ENV=production

# Frontend URL (your Netlify domain)
FRONTEND_URL=https://your-app.netlify.app

# CORS Origins (comma-separated)
CORS_ORIGINS=https://your-app.netlify.app,https://boom-card.bg

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Stripe (optional - for payments)
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_MONTHLY_PRICE_ID=price_...
STRIPE_QUARTERLY_PRICE_ID=price_...
STRIPE_ANNUAL_PRICE_ID=price_...

# Email Service (optional)
EMAIL_FROM=noreply@boomcard.bg
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password

# 2FA Secret (for development/testing only - production should generate per user)
TWO_FA_SECRET=JBSWY3DPEHPK3PXP

# Sentry (optional - for error tracking)
SENTRY_DSN=https://...@sentry.io/...

# Analytics (optional)
GOOGLE_ANALYTICS_ID=G-...
MIXPANEL_TOKEN=...

# File Upload (optional)
AWS_S3_BUCKET=boom-card-uploads
AWS_ACCESS_KEY_ID=...
AWS_SECRET_ACCESS_KEY=...
AWS_REGION=eu-central-1

# Feature Flags
ENABLE_2FA=true
ENABLE_SOCIAL_LOGIN=false
ENABLE_PARTNER_API=true

# Security
SESSION_SECRET=your-session-secret-here
ENCRYPTION_KEY=your-32-character-encryption-key