# Server Configuration
NODE_ENV=development
PORT=3001
API_VERSION=v1
API_PREFIX=/api/v1

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/boom_card_db
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_TLS=false

# JWT & Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-change-in-production
JWT_REFRESH_EXPIRES_IN=30d

# Session Configuration
SESSION_SECRET=your-session-secret-change-in-production
SESSION_NAME=boom_card_session
SESSION_MAX_AGE=86400000

# Payment Processing
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
PAYMENT_CURRENCY=BGN

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
EMAIL_FROM=noreply@boomcard.bg
EMAIL_FROM_NAME=BOOM Card

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=eu-central-1
AWS_S3_BUCKET=boom-card-assets
AWS_S3_UPLOAD_URL=https://boom-card-assets.s3.eu-central-1.amazonaws.com

# QR Code Configuration
QR_CODE_BASE_URL=https://app.boomcard.bg/qr
QR_CODE_EXPIRY_MINUTES=15

# API Keys
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# SMS Configuration
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Push Notifications
FCM_SERVER_KEY=your-firebase-cloud-messaging-server-key
APNS_KEY_ID=your-apple-push-notification-key-id
APNS_TEAM_ID=your-apple-team-id

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:3000,https://boomcard.bg,https://www.boomcard.bg
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp
MAX_FILE_SIZE=5242880

# Monitoring & Logging
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_MORGAN=true

# Cache Configuration
CACHE_TTL_PARTNERS=3600
CACHE_TTL_CATEGORIES=86400
CACHE_TTL_USER_SESSION=1800
CACHE_TTL_SEARCH_RESULTS=300

# Geo Configuration
DEFAULT_COUNTRY=BG
DEFAULT_TIMEZONE=Europe/Sofia
DEFAULT_LANGUAGE=bg
SUPPORTED_LANGUAGES=bg,en

# Partner Integration
POS_API_TIMEOUT=5000
POS_WEBHOOK_TIMEOUT=10000
PARTNER_API_KEY_LENGTH=32

# Admin Configuration
ADMIN_EMAIL=admin@boomcard.bg
ADMIN_INITIAL_PASSWORD=ChangeMe123!
SUPER_ADMIN_EMAILS=superadmin@boomcard.bg

# Feature Flags
ENABLE_SOCIAL_LOGIN=true
ENABLE_2FA=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_SMS_VERIFICATION=false
ENABLE_PARTNER_SELF_REGISTRATION=true
ENABLE_ANALYTICS=true
ENABLE_PUSH_NOTIFICATIONS=true

# Third Party APIs
WEATHER_API_KEY=your-weather-api-key
CURRENCY_EXCHANGE_API_KEY=your-currency-api-key

# Backup & Maintenance
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 3 * * *"
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System under maintenance. Please check back soon."

# Development
DEBUG_SQL=false
DEBUG_CACHE=false
DEBUG_EMAIL=true
SEED_DATABASE=false
