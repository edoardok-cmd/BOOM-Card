# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/boom_card
DATABASE_SSL=false
DATABASE_POOL_SIZE=10

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_TLS=false

# Application Configuration
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000/api
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001
PARTNER_URL=http://localhost:3002

# Security & Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=10
SESSION_SECRET=your-session-secret-key-change-this

# API Keys & External Services
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-oauth-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Payment Processing
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM=BOOM Card <noreply@boomcard.bg>
EMAIL_SUPPORT=support@boomcard.bg

# SMS Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# File Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=eu-central-1
AWS_S3_BUCKET=boom-card-assets
AWS_CLOUDFRONT_URL=https://d1234567890.cloudfront.net

# Analytics & Monitoring
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
MIXPANEL_TOKEN=your-mixpanel-token

# Push Notifications
FCM_SERVER_KEY=your-firebase-cloud-messaging-server-key
ONESIGNAL_APP_ID=your-onesignal-app-id
ONESIGNAL_API_KEY=your-onesignal-api-key

# QR Code Configuration
QR_CODE_BASE_URL=https://app.boomcard.bg/qr
QR_CODE_ENCRYPTION_KEY=your-qr-encryption-key-32-chars

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With,X-API-Key

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=30
LOG_COMPRESS=true

# Caching
CACHE_TTL=3600
CACHE_CHECK_PERIOD=600
CACHE_MAX_KEYS=10000

# Localization
DEFAULT_LANGUAGE=bg
SUPPORTED_LANGUAGES=bg,en
TIMEZONE=Europe/Sofia

# Feature Flags
FEATURE_SOCIAL_LOGIN=true
FEATURE_PUSH_NOTIFICATIONS=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_PARTNER_API=true
FEATURE_MOBILE_APP=true

# POS Integration
POS_API_ENDPOINT=https://pos-api.example.com
POS_API_KEY=your-pos-api-key
POS_API_SECRET=your-pos-api-secret
POS_WEBHOOK_SECRET=your-pos-webhook-secret

# Admin Configuration
ADMIN_DEFAULT_EMAIL=admin@boomcard.bg
ADMIN_DEFAULT_PASSWORD=change-this-password-immediately

# Background Jobs
REDIS_QUEUE_NAME=boom-card-jobs
JOB_CONCURRENCY=5
JOB_RETRY_ATTEMPTS=3
JOB_RETRY_DELAY=5000

# Image Processing
IMAGE_MAX_SIZE_MB=5
IMAGE_ALLOWED_FORMATS=jpg,jpeg,png,webp
IMAGE_THUMBNAIL_WIDTH=300
IMAGE_THUMBNAIL_HEIGHT=300
IMAGE_QUALITY=85

# Geolocation
GEOLOCATION_DEFAULT_LATITUDE=42.6977
GEOLOCATION_DEFAULT_LONGITUDE=23.3219
GEOLOCATION_DEFAULT_RADIUS_KM=10

# Partner Configuration
PARTNER_COMMISSION_PERCENTAGE=10
PARTNER_MINIMUM_PAYOUT=50
PARTNER_PAYOUT_FREQUENCY=monthly

# Subscription Plans
SUBSCRIPTION_TRIAL_DAYS=7
SUBSCRIPTION_GRACE_PERIOD_DAYS=3

# Security Headers
HSTS_MAX_AGE=31536000
CSP_DIRECTIVES=default-src 'self'; script-src 'self' 'unsafe-inline' https://www.google-analytics.com

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=We are currently performing scheduled maintenance. Please check back soon.

# API Versioning
API_VERSION=v1
API_DEPRECATION_NOTICE_DAYS=30

# Search Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX_PREFIX=boom_card
SEARCH_RESULTS_PER_PAGE=20

# Social Media
FACEBOOK_PAGE_URL=https://facebook.com/boomcard
INSTAGRAM_URL=https://instagram.com/boomcard
TWITTER_URL=https://twitter.com/boomcard

# Legal URLs
TERMS_OF_SERVICE_URL=https://boomcard.bg/terms
PRIVACY_POLICY_URL=https://boomcard.bg/privacy
COOKIE_POLICY_URL=https://boomcard.bg/cookies

# Development Tools
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=true
ENABLE_DEBUG_TOOLBAR=false
