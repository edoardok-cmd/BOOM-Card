# Frontend Environment Variables
# Copy this file to .env.local and update with your values

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_API_VERSION=v1
NEXT_PUBLIC_API_TIMEOUT=30000

# WebSocket Configuration
NEXT_PUBLIC_WS_URL=ws://localhost:3001
NEXT_PUBLIC_WS_RECONNECT_INTERVAL=5000
NEXT_PUBLIC_WS_MAX_RECONNECT_ATTEMPTS=5

# Application Configuration
NEXT_PUBLIC_APP_NAME=BOOM Card
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_ENV=development

# Authentication
NEXT_PUBLIC_AUTH_COOKIE_NAME=boom_auth_token
NEXT_PUBLIC_AUTH_COOKIE_EXPIRES_DAYS=30
NEXT_PUBLIC_SESSION_TIMEOUT_MINUTES=60
NEXT_PUBLIC_REFRESH_TOKEN_THRESHOLD_MINUTES=5

# OAuth Providers
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id
NEXT_PUBLIC_FACEBOOK_APP_ID=your_facebook_app_id
NEXT_PUBLIC_APPLE_CLIENT_ID=your_apple_client_id

# Map Configuration
NEXT_PUBLIC_MAPBOX_API_KEY=your_mapbox_api_key
NEXT_PUBLIC_DEFAULT_MAP_CENTER_LAT=42.6977
NEXT_PUBLIC_DEFAULT_MAP_CENTER_LNG=23.3219
NEXT_PUBLIC_DEFAULT_MAP_ZOOM=12
NEXT_PUBLIC_MAP_STYLE=mapbox://styles/mapbox/streets-v11

# Google Maps (Alternative)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key
NEXT_PUBLIC_GOOGLE_MAPS_LIBRARIES=places,geometry

# Geolocation
NEXT_PUBLIC_GEOLOCATION_TIMEOUT=10000
NEXT_PUBLIC_GEOLOCATION_HIGH_ACCURACY=true
NEXT_PUBLIC_DEFAULT_SEARCH_RADIUS_KM=10

# Payment Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
NEXT_PUBLIC_PAYMENT_CURRENCY=BGN
NEXT_PUBLIC_PAYMENT_LOCALE=bg-BG

# File Upload
NEXT_PUBLIC_MAX_FILE_SIZE_MB=10
NEXT_PUBLIC_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp
NEXT_PUBLIC_ALLOWED_DOCUMENT_TYPES=application/pdf

# CDN Configuration
NEXT_PUBLIC_CDN_URL=https://cdn.boomcard.bg
NEXT_PUBLIC_IMAGE_CDN_URL=https://images.boomcard.bg
NEXT_PUBLIC_STATIC_CDN_URL=https://static.boomcard.bg

# Analytics
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX
NEXT_PUBLIC_FACEBOOK_PIXEL_ID=your_fb_pixel_id
NEXT_PUBLIC_HOTJAR_ID=your_hotjar_id
NEXT_PUBLIC_CLARITY_ID=your_clarity_id

# Sentry Error Tracking
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_SENTRY_ENVIRONMENT=development
NEXT_PUBLIC_SENTRY_SAMPLE_RATE=0.1

# Feature Flags
NEXT_PUBLIC_FEATURE_MOBILE_APP_DOWNLOAD=true
NEXT_PUBLIC_FEATURE_SOCIAL_LOGIN=true
NEXT_PUBLIC_FEATURE_REVIEWS=true
NEXT_PUBLIC_FEATURE_FAVORITES=true
NEXT_PUBLIC_FEATURE_NOTIFICATIONS=true
NEXT_PUBLIC_FEATURE_CHAT_SUPPORT=true
NEXT_PUBLIC_FEATURE_ADVANCED_SEARCH=true
NEXT_PUBLIC_FEATURE_QR_SCANNER=true
NEXT_PUBLIC_FEATURE_LOCATION_SERVICES=true
NEXT_PUBLIC_FEATURE_PUSH_NOTIFICATIONS=false

# Localization
NEXT_PUBLIC_DEFAULT_LOCALE=bg
NEXT_PUBLIC_SUPPORTED_LOCALES=bg,en
NEXT_PUBLIC_LOCALE_DETECTION=true

# SEO Configuration
NEXT_PUBLIC_SEO_TITLE_TEMPLATE=%s | BOOM Card
NEXT_PUBLIC_SEO_DEFAULT_TITLE=BOOM Card - Your Ultimate Discount Platform
NEXT_PUBLIC_SEO_DEFAULT_DESCRIPTION=Save up to 50% at restaurants, hotels, spas, and entertainment venues with BOOM Card
NEXT_PUBLIC_SEO_DEFAULT_KEYWORDS=discount card,restaurants,hotels,spa,entertainment,savings,bulgaria
NEXT_PUBLIC_SEO_TWITTER_HANDLE=@boomcard

# Social Media Links
NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/boomcard
NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/boomcard
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/boomcard
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/boomcard
NEXT_PUBLIC_YOUTUBE_URL=https://youtube.com/boomcard

# Support Configuration
NEXT_PUBLIC_SUPPORT_EMAIL=support@boomcard.bg
NEXT_PUBLIC_SUPPORT_PHONE=+359 2 123 4567
NEXT_PUBLIC_BUSINESS_EMAIL=business@boomcard.bg
NEXT_PUBLIC_LIVE_CHAT_WIDGET_ID=your_chat_widget_id

# App Store Links
NEXT_PUBLIC_APP_STORE_URL=https://apps.apple.com/app/boomcard/id123456789
NEXT_PUBLIC_GOOGLE_PLAY_URL=https://play.google.com/store/apps/details?id=bg.boomcard.app
NEXT_PUBLIC_APP_SMART_BANNER=true

# QR Code Configuration
NEXT_PUBLIC_QR_CODE_SIZE=256
NEXT_PUBLIC_QR_CODE_ERROR_CORRECTION=M
NEXT_PUBLIC_QR_CODE_MARGIN=2

# Cache Configuration
NEXT_PUBLIC_CACHE_TTL_SECONDS=300
NEXT_PUBLIC_STALE_WHILE_REVALIDATE_SECONDS=60

# Rate Limiting
NEXT_PUBLIC_API_RATE_LIMIT_REQUESTS=100
NEXT_PUBLIC_API_RATE_LIMIT_WINDOW_MS=60000

# Security
NEXT_PUBLIC_ENABLE_CSP=true
NEXT_PUBLIC_ENABLE_HSTS=true
NEXT_PUBLIC_FORCE_HTTPS=false

# Development Tools
NEXT_PUBLIC_ENABLE_DEBUG=false
NEXT_PUBLIC_ENABLE_REACT_QUERY_DEVTOOLS=false
NEXT_PUBLIC_ENABLE_REDUX_DEVTOOLS=false

# Mobile App Configuration
NEXT_PUBLIC_MOBILE_APP_SCHEME=boomcard://
NEXT_PUBLIC_DEEP_LINK_DOMAIN=app.boomcard.bg

# Partner Portal
NEXT_PUBLIC_PARTNER_PORTAL_URL=https://partners.boomcard.bg

# Admin Portal
NEXT_PUBLIC_ADMIN_PORTAL_URL=https://admin.boomcard.bg

# API Keys for External Services (Frontend Safe)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_name
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=your_upload_preset
NEXT_PUBLIC_ALGOLIA_APP_ID=your_algolia_app_id
NEXT_PUBLIC_ALGOLIA_SEARCH_KEY=your_algolia_search_key

# A/B Testing
NEXT_PUBLIC_OPTIMIZELY_SDK_KEY=your_optimizely_key
NEXT_PUBLIC_AB_TEST_COOKIE_NAME=boom_ab_tests

# Performance Monitoring
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_PERFORMANCE_SAMPLE_RATE=0.1

# Push Notifications
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key
NEXT_PUBLIC_ENABLE_WEB_PUSH=true

# Maintenance Mode
NEXT_PUBLIC_MAINTENANCE_MODE=false
NEXT_PUBLIC_MAINTENANCE_MESSAGE=We are currently performing scheduled maintenance. We'll be back shortly!
